{
    "version": 2,
    "builds": [
        {
            "src": "backend/lakkhi/wsgi.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "backend/lakkhi/wsgi.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/build/$1"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "lakkhi.settings_prod"
    }
} 