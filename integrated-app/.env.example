# Django settings (required)
DJANGO_SETTINGS_MODULE=lakkhi.settings_prod
DJANGO_SECRET_KEY=your-secret-key-here
PRODUCTION_HOST=your-vercel-app-domain
FRONTEND_URL=your-frontend-url

# Blockchain settings (required)
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Admin wallet variables are no longer needed as campaign creators now pay for their own gas fees
# ADMIN_PRIVATE_KEY=your-admin-wallet-private-key
# ADMIN_ADDRESS=your-admin-wallet-address

# Custom wallet settings (required for wallet verification)
WALLET_API_KEY=your-wallet-api-key
WALLET_SECRET=your-wallet-secret

# Mercuryo settings (required for payments)
MERCURYO_WIDGET_ID=your-mercuryo-widget-id
MERCURYO_SECRET_KEY=your-mercuryo-secret-key
MERCURYO_CALLBACK_SIGN_KEY=your-mercuryo-callback-sign-key

# Venly workaround (needed to fix import errors)
CLIENT_ID=dummy-client-id
CLIENT_SECRET=dummy-client-secret 